function shortcuts {
echo "    Ctrl + A Go to the beginning of the line you are currently typing on"
echo "    Ctrl + E Go to the end of the line you are currently typing on"
echo "    Ctrl + L Clears the Screen, similar to the clear command"
echo "    Ctrl + U Clears the line before the cursor position. If you are at"
echo "the end of the line, clears the entire line."
echo "    Ctrl + H Same as backspace"
echo "    Ctrl + R Let's you search through previously used commands"
echo "    Ctrl + C Kill whatever you are running"
echo "    Ctrl + D Exit the current shell"
echo "    Ctrl + Z Puts whatever you are running into a suspended background"
echo "process. fg restores it."
echo "    Ctrl + W Delete the word before the cursor"
echo "    Ctrl + K Clear the line after the cursor"
echo "    Ctrl + T Swap the last two characters before the cursor"
echo "    Esc + T Swap the last two words before the cursor"
echo "    Alt + F Move cursor forward one word on the current line"
echo "    Alt + B Move cursor backward one word on the current line"
echo "    Tab Auto-complete files and folder names"
}
